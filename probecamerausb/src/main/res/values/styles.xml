<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Camera2TopButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Camera2MoreSettingsTextStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Camera2MoreSettingsImageStyle">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SplashActivityStyle" parent="Theme.AppCompat.NoActionBar">
        <!-- The form background color is transparent -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- The form has no border -->
        <item name="android:windowFrame">@null</item>
        <!-- The form does not contain a title bar -->
        <item name="android:windowNoTitle">true</item>
        <!-- Window suspension -->
        <item name="android:windowIsFloating">false</item>
        <!-- Remove redundant shadows when customizing TitleBar-->
        <item name="android:windowContentOverlay">@null</item>
        <!-- Do not allow form background to be dimmed -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- Disable the preview animation of the window -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">false</item>
    </style>

    <style name="camera2_anim_down_to_top" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
</resources>